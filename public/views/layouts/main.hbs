<script>

  const tweet_quotes = Array.from(document.getElementsByClassName("tweet"));

  tweet_quotes.forEach(function(quote) {
    quote.addEventListener('mouseenter', hoverEnter);
    quote.addEventListener('mouseleave', hoverExit);
  });

  function hoverEnter(event) {
    let tweetTime = event.target.children[0];
    let tweetMessage = event.target.children[1];
    let tweetHandle = event.target.children[2].children[0].children[1];

    tweetTime.style.opacity = '1';
    tweetTime.style.transform = 'translateY(0%)';

    tweetMessage.style.transform = 'scale(1.02)';
    tweetMessage.style.color = 'hsl(0, 0%, 1%)';

    tweetHandle.style.color = 'hsl(0, 0%, 1%)';
    tweetHandle.classList.add('tweet__handle-link-background-hover');
  }

  function hoverExit(event) {
    let tweetTime = event.target.children[0];
    let tweetMessage = event.target.children[1];
    let tweetHandle = event.target.children[2].children[0].children[1];

    tweetTime.style.opacity = '0';
    tweetTime.style.transform = 'translateY(-25%)';

    tweetMessage.style.transform = 'scale(1)';
    tweetMessage.style.color = 'hsl(0, 0%, 14%)';

    tweetHandle.style.color = 'hsl(0, 0%, 12%)';
    tweetHandle.classList.remove('tweet__handle-link-background-hover');
  }


  const tweeters = Array.from(document.getElementsByClassName("tweeter__profile"));

  tweeters.forEach(function(tweeter) {
    tweeter.addEventListener('mouseenter', tweeterMouseEnter);
    tweeter.addEventListener('mouseleave', tweeterMouseExit);
  });

  function tweeterMouseEnter(event) {
    let image = event.target.children[0];
    let handle = event.target.children[1].children[0];

    image.style.filter = 'grayscale(.1)';
    image.style.transform = 'scale(1.02)';
    handle.style.color = 'hsl(202, 89%, 53%)';
  }

  function tweeterMouseExit(event) {
    let image = event.target.children[0];
    let handle = event.target.children[1].children[0];

    image.style.filter = 'grayscale(1)';
    image.style.transform = 'scale(1)';
    handle.style.color = 'hsl(0, 0%, 12%)';
  }

